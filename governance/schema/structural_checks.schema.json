{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aether3d.local/schema/structural_checks.schema.json",
  "type": "object",
  "required": ["metadata", "checks"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "last_updated"],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "last_updated": { "type": "string", "minLength": 1 }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status", "contract_id", "path"],
        "properties": {
          "id": { "type": "string", "pattern": "^STRUCT-[A-Z0-9-]+$" },
          "status": { "enum": ["active", "blocked", "planned", "deprecated"] },
          "contract_id": { "type": "string", "pattern": "^C-[A-Z0-9-]+$" },
          "path": { "type": "string", "minLength": 1 },
          "optional": { "type": "boolean" },
          "must_contain": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "must_not_contain": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "anyOf": [
          { "required": ["must_contain"] },
          { "required": ["must_not_contain"] }
        ]
      }
    }
  }
}
